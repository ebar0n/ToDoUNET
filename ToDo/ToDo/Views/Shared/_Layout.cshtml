<!DOCTYPE html>
<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>@ViewBag.Title - UNET</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        @Styles.Render("~/Content/mui-0.4.8/css/mui.min.css")
        @Styles.Render("~/Content/style.css")
        @Styles.Render("~/Content/icomoon/style.css")
        @Styles.Render("~/Content/bootstrap-material-datetimepicker.css")
        @Scripts.Render("~/Scripts/mui-0.4.8/js/mui.min.js")
        <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
        @Scripts.Render("~/Scripts/moment.js")
    </head>
    <body>
        <header class="mui-appbar mui--z1">
          <div class="mui-container">
            <table width="100%">
              <tr class="mui--appbar-height">
                <td class="mui--text-title">@Html.ActionLink("ToDoUNET", "Index", "Home")</td>
                <td align="right">
                  <ul class="mui-list--inline mui--text-body2">
                    <li><i class="icon-eye"></i> @Html.ActionLink("Acerca de", "About", "Home")</li>
                    @if (Request.IsAuthenticated) {
                        <li><i class="icon-list2"></i> @Html.ActionLink("Tareas", "Index", "Task")</li>
                    }
                    @Html.Partial("_LoginPartial")
                  </ul>
                </td>
              </tr>
            </table>
          </div>
        </header>
        <div id="content-wrapper" class="mui--text-center">
            @RenderBody()
        </div>
        <footer>
          <div class="mui-container mui--text-center">
            <p>&copy; @DateTime.Now.Year - ToDoUNET</p>
            <p>Repositorio <a href="https://github.com/ebar0n/ToDoUNET">Github</a></p>
          </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/Scripts/bootstrap-material-datetimepicker.js")
        @RenderSection("scripts", required: false)
    </body>
</html>
