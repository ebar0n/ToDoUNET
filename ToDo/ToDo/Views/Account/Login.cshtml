@model ToDo.Models.LoginModel

@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="mui--appbar-height"></div>
<br>
<br>
<div class="mui-container">
    <section id="loginForm">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Inicio de sesión</legend>
            <ul class="mui-list--unstyled mui--text-body2">
                <li class="mui-textfield">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </li>
                <li class="mui-textfield">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </li>
            </ul>
            <input type="submit" class="mui-btn mui-btn--primary mui-btn--raised" value="Iniciar sesión" />
        </fieldset>
        <br />
        <br />
        <p>
            @Html.ActionLink("Registrarse", "Register"), si no tiene ninguna cuenta.
        </p>
    }
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
