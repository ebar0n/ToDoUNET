@model ToDo.Models.LocalPasswordModel

<p>
    No dispone de contraseña local para este sitio. Agregue una contraseña
                local para iniciar sesión sin que sea necesario ningún inicio de sesión externo.
</p>

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Establecer contraseña</legend>
        <ul class="mui-list--unstyled mui--text-body2">
            <li class="mui-textfield">
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword)
            </li>
            <li class="mui-textfield">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ul>
        <input type="submit" class="mui-btn mui-btn--raised" value="Establecer contraseña" />
    </fieldset>
}
